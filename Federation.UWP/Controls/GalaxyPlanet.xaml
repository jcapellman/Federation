<UserControl x:Class="Federation.UWP.Controls.GalaxyPlanet"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="64" d:DesignWidth="64">
    
    <Grid x:Name="LayoutRoot" Width="64" Height="64">
        <Grid.Background>
            <ImageBrush x:Name="ibBackground" Opacity="0.75" />
        </Grid.Background>

        <Image x:Name="imgRace" Width="64" Height="64" />
    </Grid>
</UserControl>