<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Class="Federation.UWP.Controls.lcarButton"
    mc:Ignorable="d"
    d:DesignHeight="100" d:DesignWidth="250">

    <UserControl.Resources>
        <FontFamily x:Key="FedFont">/Fonts/lcars.ttf#lcars</FontFamily>
    </UserControl.Resources>
    
    <Grid x:Name="LayoutRoot" Background="Transparent">
        <MediaElement x:Name="meBeep" Visibility="Collapsed" Source="/Assets/Sfx/beep.wav" AutoPlay="False" />

        <Button Grid.Row="0" BorderBrush="Transparent" x:Name="btnMain" Click="BtnMain_OnClick">
            <Grid Width="200">
                <Border Width="200" Height="50" CornerRadius="25,25,25,25" Background="#fe9800"/>

                <TextBlock x:Name="tbContent" FontFamily="{StaticResource FedFont}" HorizontalAlignment="Right" Padding="0,10,10,10" />
            </Grid>
        </Button>
    </Grid>
</UserControl>