<Page  
    x:Class="Federation.UWP.BattleViewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:controls="using:Federation.UWP.Controls"
    mc:Ignorable="d"
   >

    <Grid x:ConnectionId='2' x:Name="LayoutRoot">
        <Grid.Background>
            <ImageBrush ImageSource="Assets/Backgrounds/Battle.jpg" />
        </Grid.Background>
        
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid x:ConnectionId='3' x:Name="ContentPanel" Grid.Row="1" Margin="0,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Image Source="Assets/Weapons/quantumtorpedo.png" Width="100" Height="50" />
            <controls:Ship Grid.Row="0" Grid.Column="0" ShipDuration="0:0:7" ShipType="FEDERATION_AKIRA" ShipHeight="80" ShipWidth="80" />

            <controls:Ship Grid.Row="1" Grid.Column="0" ShipDuration="0:0:10"  ShipType="FEDERATION_GALAXY" ShipHeight="192" ShipWidth="192" />

            <controls:Ship Grid.Row="2" Grid.Column="0" ShipDuration="0:0:5" ShipType="FEDERATION_DEFIANT" ShipHeight="64" ShipWidth="64" />
            
            <controls:Ship Grid.Row="3" Grid.Column="0" ShipDuration="0:0:6" ShipType="FEDERATION_RELIANT" ShipHeight="80" ShipWidth="80" />
        </Grid>
    </Grid>
</Page>

