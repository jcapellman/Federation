<Page
    x:Class="Federation.UWP.AboutPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:ConnectionId='1' x:Name="LayoutRoot">
        <Grid.Background>
            <ImageBrush ImageSource="Assets/Backgrounds/MainMenu.jpg" />
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Margin="110,10,0,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="FEDERATION" Grid.Row="0" FontFamily=".\Fonts\LCARS.ttf#LCARS" FontSize="100" Margin="0,0,0,-20" Foreground="#d37f00" />

            <TextBlock Grid.Column="0" Margin="5,0,0,0" Text="Version 0.1.44.444 (C)2014 Motion Blur Studios." HorizontalAlignment="Left" Grid.Row="1" VerticalAlignment="Bottom" FontSize="12"/>

            <TextBlock Grid.Row="0" Grid.Column="1" Text="about" FontFamily=".\Fonts\LCARS.ttf#LCARS" FontSize="75" Margin="0,10,20,0" Foreground="#e8e000" />
        </Grid>
        
        <StackPanel x:ConnectionId='2' x:Name="spCredits" Grid.Row="1" Orientation="Vertical" Margin="0,350,0,0">
            <TextBlock Text="programming" HorizontalAlignment="Center" />
            <TextBlock Text="Jarred Capellman" HorizontalAlignment="Center" />

            <TextBlock Text="design" Margin="0,20,0,0" HorizontalAlignment="Center" />
            <TextBlock Text="Jarred Capellman" HorizontalAlignment="Center" />
                
            <TextBlock Text="graphics" Margin="0,20,0,0" HorizontalAlignment="Center" />
            <TextBlock Text="Jarred Capellman" HorizontalAlignment="Center" />

            <TextBlock Text="music" Margin="0,20,0,0" HorizontalAlignment="Center" />
            <TextBlock Text="Jarred Capellman" HorizontalAlignment="Center" />
        </StackPanel>        
    </Grid>
</Page>

